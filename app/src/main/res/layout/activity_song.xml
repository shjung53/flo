<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


<!--  상단 설정 버튼들-->
    <ImageView
        android:id="@+id/song_btn_setting_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_setting"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageView
        android:id="@+id/song_btn_eq_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_eq_off"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/song_btn_setting_iv"
        app:layout_constraintStart_toEndOf="@id/song_btn_setting_iv"
        app:layout_constraintEnd_toStartOf="@id/song_btn_wifi_iv"
        app:layout_constraintBottom_toBottomOf="@id/song_btn_setting_iv"
        />
    <ImageView
        android:id="@+id/song_btn_wifi_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/wifi_solid"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/song_btn_setting_iv"
        app:layout_constraintStart_toEndOf="@id/song_btn_eq_iv"
        app:layout_constraintBottom_toBottomOf="@id/song_btn_setting_iv"
        />
    <ImageView
        android:id="@+id/song_btn_down_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/nugu_btn_down"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/song_btn_setting_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/song_btn_setting_iv"

        />
<!--    노래 정보 버튼-->
    <ImageView
        android:id="@+id/song_btn_more_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_more"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/song_btn_down_iv"
        app:layout_constraintEnd_toEndOf="parent"
        />
<!--    상단 노래 제목과 가수-->
    <TextView
        android:id="@+id/song_upper_title_tv"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="라일락"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/song_btn_more_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/song_upper_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유 (IU)"
        android:textColor="#494949"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/song_upper_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/btn_arrow_more"
        app:layout_constraintStart_toEndOf="@id/song_upper_singer_tv"
        app:layout_constraintTop_toTopOf="@id/song_upper_singer_tv"
        app:layout_constraintBottom_toBottomOf="@id/song_upper_singer_tv"
        >
    </ImageView>

<!--    앨범 커버-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/song_upper_singer_tv"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_album_exp2"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>







</androidx.constraintlayout.widget.ConstraintLayout>