<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


<!--  상단 설정 버튼들-->
    <ImageView
        android:id="@+id/song_btn_setting_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_setting"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageView
        android:id="@+id/song_btn_eq_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_eq_off"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/song_btn_setting_iv"
        app:layout_constraintStart_toEndOf="@id/song_btn_setting_iv"
        app:layout_constraintEnd_toStartOf="@id/song_btn_wifi_iv"
        app:layout_constraintBottom_toBottomOf="@id/song_btn_setting_iv"
        />
    <ImageView
        android:id="@+id/song_btn_wifi_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/wifi_solid"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/song_btn_setting_iv"
        app:layout_constraintStart_toEndOf="@id/song_btn_eq_iv"
        app:layout_constraintBottom_toBottomOf="@id/song_btn_setting_iv"
        />
    <ImageButton
        android:id="@+id/song_btn_down_ib"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/nugu_btn_down"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/song_btn_setting_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/song_btn_setting_iv"

        />
<!--    노래 정보 버튼-->
    <ImageView
        android:id="@+id/song_btn_more_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_more"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/song_btn_down_ib"
        app:layout_constraintEnd_toEndOf="parent"
        />
<!--    상단 노래 제목과 가수-->
    <TextView
        android:id="@+id/song_upper_title_tv"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="라일락"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/song_btn_more_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/song_upper_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유 (IU)"
        android:textColor="#494949"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/song_upper_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/btn_arrow_more"
        app:layout_constraintStart_toEndOf="@id/song_upper_singer_tv"
        app:layout_constraintTop_toTopOf="@id/song_upper_singer_tv"
        app:layout_constraintBottom_toBottomOf="@id/song_upper_singer_tv"
        >
    </ImageView>

<!--    앨범 커버-->
    <androidx.cardview.widget.CardView
        android:id="@+id/song_album_cover_iv"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/song_upper_singer_tv"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_album_exp2"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>
<!--    가사-->
    <TextView
        android:id="@+id/song_lyrics_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나리는 꽃가루에\n눈이 따끔해 아야"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/song_album_cover_iv"
        app:layout_constraintStart_toStartOf="parent"

        />
<!--    곡 좋아요-->
    <ImageView
        android:id="@+id/song_like"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_my_like_off"
        android:layout_marginTop="15dp"
        android:layout_marginStart="100dp"
        app:layout_constraintTop_toBottomOf="@id/song_lyrics_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/song_unlike_iv"
        />
    <ImageView
        android:id="@+id/song_unlike_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_player_unlike_off"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/song_lyrics_tv"
        app:layout_constraintStart_toEndOf="@id/song_like"
        app:layout_constraintEnd_toEndOf="parent"
        />

<!--    노래 진행 표시줄-->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/song_progress_lpi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="30dp"
        app:indicatorColor="#9E9E9E"
        app:layout_constraintTop_toBottomOf="@id/song_like"
        >
    </com.google.android.material.progressindicator.LinearProgressIndicator>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="12sp"
        android:textColor="#3F3FFF"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/song_progress_lpi"
        app:layout_constraintStart_toStartOf="parent"
        >
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01:00"
        android:textSize="12sp"
        android:textColor="#9E9E9E"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/song_progress_lpi"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </TextView>

<!--    플레이 관련 버튼들 -->
    <ImageView
        android:id="@+id/song_btn_repeat_off_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/nugu_btn_repeat_inactive"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/song_progress_lpi"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="visible"
        />
    <ImageView
        android:id="@+id/song_btn_repeat_on_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/btn_playlist_repeat_on"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/song_progress_lpi"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/song_btn_repeat_one_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/btn_playlist_repeat_on1"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/song_progress_lpi"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/song_btn_repeat_list_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/btn_playlist_repeat_playlist"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/song_progress_lpi"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/song_btn_play3_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/song_progress_lpi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/song_btn_previous_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/nugu_btn_skip_previous_32"
            />
        <ImageView
            android:id="@+id/song_btn_play_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/nugu_btn_play_32"
            android:visibility="visible"
            />
        <ImageView
            android:id="@+id/song_btn_pause_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/nugu_btn_pause_32"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/song_btn_next_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/nugu_btn_skip_next_32"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/song_random_off_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/nugu_btn_random_inactive"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/song_progress_lpi"
        app:layout_constraintStart_toEndOf="@id/song_btn_play3_ll"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"
        />
    <ImageView
        android:id="@+id/song_random_on_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/btn_playlist_random_on"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/song_progress_lpi"
        app:layout_constraintStart_toEndOf="@id/song_btn_play3_ll"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        />


<!--    하단 버튼들 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/song_btn_play3_ll"
        android:gravity="bottom"
        >
    <ImageView
        android:id="@+id/song_btn_insta_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/btn_actionbar_instagram"
        android:layout_weight="1"
        />
    <ImageView
        android:id="@+id/song_btn_similar_iv"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:src="@drawable/btn_player_related"
        android:layout_weight="1"
        />
    <ImageView
        android:id="@+id/song_btn_list_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_go_list"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>