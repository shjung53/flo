<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/item_album_cover_img_cv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="7dp"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/item_album_cover_img_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_album_exp2"
            >
        </ImageView>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/item_album_btn_play_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/widget_black_play"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@id/item_album_cover_img_cv"
        app:layout_constraintEnd_toEndOf="@id/item_album_cover_img_cv"
        />
    <TextView
        android:id="@+id/item_album_title_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/item_album_cover_img_cv"
        app:layout_constraintStart_toStartOf="@id/item_album_cover_img_cv"
        />
    <TextView
        android:id="@+id/item_album_singer_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="가수"
        android:textSize="16sp"
        android:textColor="#777777"
        app:layout_constraintTop_toBottomOf="@id/item_album_title_tv"
        app:layout_constraintStart_toStartOf="@id/item_album_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        />














































</androidx.constraintlayout.widget.ConstraintLayout>